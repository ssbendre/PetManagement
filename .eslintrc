{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base"], 
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "linebreak-style": ["error", "windows"],
        "indent": ["error", 4],
        "import/newline-after-import": "off",
        "arrow-body-style": "off",
        "no-underscore-dangle": "off"
    }
}